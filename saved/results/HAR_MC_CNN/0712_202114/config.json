{
    "name": "HAR_MC_CNN",
    "n_gpu": 1,
    "arch": {
        "Bayes": "MC_dropout",
        "type": "CNN_dropout",
        "args": {
            "input_dim": 9,
            "num_classes": 6,
            "filters": [
                256
            ],
            "kernels": [
                3
            ],
            "pdrop": 0.2
        }
    },
    "data_loader": {
        "type": "HumanActivityRecognitionDataLoader",
        "args": {
            "data_dir": "data/UCI_HAR_Dataset",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy",
        "precision",
        "recall",
        "f1"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "MC_dropout",
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
    "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
        "visualization": {
            "scatter": true
        }
    }
}